def Gestion_de_caisse(chiffre_affaire,dépenses,nombre_articles,remises,réglement_de_fiscalité,bénéfices):
    print("chiffre d'affaire= ",chiffre_affaire)
    print("dépenses= ",dépenses)
    print("nombre d'articles vendus= ",nombre_articles)
    print("les remises= ",remises)
    print("réglement de fiscalité",réglement_de_fiscalité)
    print("bénéfices",bénéfices)
    print ("si vous voulez modifier le chiffre d'affaire tapez 1")
    print ("si vous voulez modifier les dépenses tapez 2")
    print ("si vous voulez modifier le nombre d'articles tapez 3")
    print ("si vous voulez modifier les remises tapez 4")
    print ("si vous voulez modifier le réglement de fiscalité tapez 5")
    print ("si vous voulez modifier les bénéfices tapez 6")


def modifier_tableau(T):
    mois=(int(input("vous voulez modifier le paramètre de quel mois ?(veuilez insérer le nombre correspondant du mois: ")))
    while mois>12:
        mois=(int(input("vous voulez modifier le paramètre de quel mois ?(veuilez insérer le nombre correspondant du mois: ")))
        
    
    T[mois-1]=int(input("donner la nouvelle valeur: "))
    print(T)


def principale_caisse():
     choix='a'
     # choix=input('fin= f, continuer=v,modifier=m,supprimer=s')
     while choix!='v' and choix!='f' and choix!='c'  :
          print('si vous voulez continuer tapez v')
          print('si vous voulez quittez tapez f')
          print('si vous voulez consulter les courbes tapez c')
          choix=input('donner votre choix ')
          while choix!='v'and choix!='c'and choix!='f':
              choix=input('donner votre choix ')
              
     if choix=='v':
        choixGC=(int(input("donner votre choix: ")))
        while choixGC!=1 and choixGC!=2 and choixGC!=3 and choixGC!=4 and choixGC!=5 and choixGC!=6 :
               choixGC=(int(input("donner votre choix: ")))
        if choixGC==1:
             modifier_tableau(chiffre_affaire)
        if choixGC==2:
             modifier_tableau(dépenses)
        if choixGC==3:
             modifier_tableau(nombre_articles)
        if choixGC==4:
             modifier_tableau(remises)
        if choixGC==5:
             modifier_tableau(réglement_de_fiscalité)
        elif choixGC==6:
             modifier_tableau(bénéfices)
        Gestion_de_caisse(chiffre_affaire,dépenses,nombre_articles,remises,réglement_de_fiscalité,bénéfices)
        f=open('caisse.txt','a')
        f.write('Les élèments de caisse sont:')
        f.write('\n')
        f.write("chiffre d'affaire:")
        f.write(str(chiffre_affaire))
        f.write('\n')
        f.write('dépenses:')
        f.write(str(dépenses))
        f.write('\n')
        f.write("nombre d'articles:")
        f.write(str(nombre_articles))
        f.write('\n')
        f.write('remises:')
        f.write(str(remises))
        f.write('\n')
        f.write('réglement de fiscalité:')
        f.write(str(réglement_de_fiscalité))
        f.write('\n')
        f.write('bénéfices:')
        f.write(str(bénéfices))
        f.write('\n')
        f = open('caisse.txt','r')
        f.close()

        principale_caisse()
     
        
     
        
     elif choix=='f':
            print('fin')
     
        
     
        
     
        
     elif choix=='c':
         import matplotlib.pyplot as plt
         consulter_les_courbes=input('vous voulez consulter: ')
         if consulter_les_courbes=='v':

                   x=les_mois_pour_la_courbes
                   y=dépenses
                   y1=bénéfices
                   plt.xlabel('mois')
                   plt.plot(x,y,"g", label="dépenses")
                   plt.plot(x,y1,"b", label="bénéfices", linestyle='-.')
                   plt.xlabel("mois")
                   plt.ylabel("chiffre")
                   plt.title("courbe de comparaison bénéfices/dépenses")
                   plt.legend()
                   plt.show()
                   
                   plt.hist(chiffre_affaire,bins=12,color = 'yellow',edgecolor='black')
                   plt.xlabel("chiffre d'affaire")
                   plt.ylabel("fréquence chiffre d'affaire")
                   plt.show()
         principale_caisse()





















