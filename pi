# def meryem 
def Gestion_de_stock(Date,libelle,stock_entrant,montant_entrant,stock_sortant,montant_sortant):
    
    print("Dates= ",Date)
    print("libellés= ",libelle)
    print("Stock entrant= ",stock_entrant)
    print("Montant entrant= ",montant_entrant)
    print("Stock sortant= ",stock_sortant)
    print("Montant sortant= ",montant_sortant)
    print ("si vous voulez modifier ou ajouter la Date tapez 1 ")
    print ("si vous voulez modifier ou ajouter les libelles tapez 2 ")
    print ("si vous voulez modifier ou ajouter le stock entrant tapez 3  ")
    print ("si vous voulez modifier ou ajouter les montants entrants tapez 4  ")
    print ("si vous voulez modifier ou ajouter le stock sortant tapez 5: ")
    print ("si vous voulez modifier ou ajouter les montants sortants tapez 6 ")



def remplir_tableau_date(Tableau):
    jour=int(input("donner le jour : "))
    while jour==0 and jour>31:
        jour=int(input("donner le jour : "))
    mois=int(input('donner le mois: '))
    while mois==0 and mois>12:
        mois=int(input('donner le mois: '))
    annee=(input("donner l'année: "))
    while len(annee)!=4:
        annee=(input("donner l'année: "))
    date=[jour,mois,annee]
    Tableau.append(date)



    
# recherche par date 
def consulter_stock_Par_Date(choix_date):
    
        
        mois_cherche=int(input("donner le mois que vous voulez consultez: ")) 
        while mois_cherche==0 and mois_cherche>12:
            mois_cherche=int(input("donner le mois que vous voulez consultez: "))
        for i in range (0,len(Date)):
            if Date[i][1]==mois_cherche:
                # position_date = Date.index(mois_cherche)
                print('ce que vous cherchez est à la position: ',i)
                print('Date= ',Date[i])
                print('libelle= ',libelle[i])
                print('stock entrant= ',stock_entrant[i])
                print('montant entrant= ',montant_entrant[i])
                print('stock sortant= ',stock_sortant[i])
                print('montant sortant= ',montant_sortant[i])
            else:
                print("introuvable")
            print('-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-')
                


    
def consulter_stock_Par_libelle(choix_libelle):
    tableau_affichage_consulting=[]
    choix_libelle=(input(('donner le libelle que vous cherchez: ')))
    for i in range(0,len(libelle)) :
        if libelle[i]==choix_libelle:
            tableau_affichage_consulting.append(i)
            for j in tableau_affichage_consulting:
                  print('ce que vous cherchez est à la position: ',j)
                  print('Date= ',Date[j])
        
                  print('stock entrant= ',stock_entrant[j])
                  print('montant entrant= ',montant_entrant[j])
                  print('stock sortant= ',stock_sortant[j])
                  print('montant sortant= ',montant_sortant[j])
        else:
            print('introuvable')
        print('-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-')
        

def Modifier_date(tableau):
    valeur_a_modifier=int(input('donner le numero de la ligne à modifier: '))
    tableau[valeur_a_modifier]=int(input('donner la nouvelle date: '))
    print('-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-')
    
   
        

def modifier_tableau_en_chiffre_(tableau):
    valeur_a_modifier=int(input('donner le numero de la ligne à modifier: '))
    nouvelle_valeur=float(input('donner la nouvelle valeur: '))
    tableau[valeur_a_modifier]=nouvelle_valeur
    print('-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-')
    

    


def principale_stock():
    
    choix='a'
    
    
    while choix!='v' and choix!='f' and choix!='m' and choix!='t' and choix!='c' :
          print('Si vous voulez continuez tapez v')
          print('Si vous voulez sortir tapez f')
          print('Si vous voulez modifier quelque chose tapez m')
          print("Si vous voulez consultez la commande d'un client tapez t")
          print("si vous voulez consultez les courbes tapez c")
          print('-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-')
          choix=input('Donnez votre choix: ')
    if choix=='v':
        Gestion_de_stock(Date,libelle,stock_entrant,montant_entrant,stock_sortant,montant_sortant)
        print('-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-')
        choix_gestion_stock=(int(input("donner votre choix: ")))
        
        
        while (choix_gestion_stock>6)and (choix_gestion_stock==0):
             choix_gestion_stock=(int(input("donner votre choix: ")))

        if choix_gestion_stock==1:
             remplir_tableau_date(Date)
             
        if choix_gestion_stock==2:
             remplir_tableau_en_nom(libelle)
        if choix_gestion_stock==3:
             remplir_tableau_en_nom(stock_entrant)
        if choix_gestion_stock==4:
             remplir_tableau_en_chiffre(montant_entrant)
        if choix_gestion_stock==5:
             remplir_tableau_en_nom(stock_sortant)
        elif choix_gestion_stock==6:
             remplir_tableau_en_chiffre(montant_sortant)
        print('-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-')
        principale_stock()
   
    
    elif choix=='f':
            print('_-_-_-_-_-_-_ fin _-_-_-_-_-_-_-')
    
    
    elif choix=='t':
         print('si vous voulez chercher selon la date tapez 1')
         print('si vous voulez chercher selon le libelle tapez 2')
         choix_consultation=int(input('donner votre choix: '))
         while choix_consultation!=1 and choix_consultation!=2:
             choix_consultation=int(input('donner votre choix: '))
         if choix_consultation ==1:
             consulter_stock_Par_Date(choix_date)
             
         if choix_consultation ==2:
             consulter_stock_Par_libelle(choix_libelle)
         print('-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-')
         principale_stock()
    
    
    
    
    
    
    elif choix=='c':
         
        import matplotlib.pyplot as plt
        
        plt.pie(montant_entrant,       labels=stock_entrant,    autopct='%1.1f%%',startangle=90,shadow=True)
        plt.axis('equal')
        plt.show()
        print('-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-')
        # courbe 2
       
        plt.pie(montant_sortant,       labels=stock_sortant,    autopct='%1.1f%%',startangle=90,shadow=True)
        plt.axis('equal')
        plt.show()
        print('-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-')
        principale_stock() 
     
        
     
        
    elif choix=='m':
         print('si vous voulez modifiez la date tapez 1')
         print('si vous voulez modifiez le libelle tapez 2')
         print('si vous voulez modifiez le stock entrant tapez 3')
         print('si vous voulez modifiez le montant entrant tapez 4')
         print('si vous voulez modifiez le stock sortant tapez 5 ')
         print('si vous voulez modifiez le montant sortant tapez 6')
         print('-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-')
         choix_modification=int(input('donner choix de modification'))
         if choix_modification==1:
             Modifier_date(Date)
             print(Date)
           
         if choix_modification==2:
             modifier_tableau_nom(libelle)
             print(libelle)
           
         if choix_modification==3:
             modifier_tableau_nom(stock_entrant)
         if choix_modification==4:
             modifier_tableau_en_chiffre(montant_entrant)  
         if choix_modification==5:
             modifier_tableau_nom(stock_sortant)
         if choix_modification==6:
             modifier_tableau_en_chiffre(montant_sortant)
         print('-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-')
         f=open('stock.txt','a')
         f.write('fiche de stock est:')
         f.write('\n')
         f.write("Date:")
         f.write(str(Date))
         f.write('\n')
         f.write('libelle:')
         f.write(str(libelle))
         f.write('\n')
         f.write('stock entrant:')
         f.write(str(stock_entrant))
         f.write('\n')
         f.write('montant_entrant:')
         f.write(str(montant_entrant))
         f.write('\n')
         f.write('stock_sortant:')
         f.write(str(stock_sortant))
         f.write('\n')
         f.write('montant_sortant:')
         f.write(str(montant_sortant))
         f.write('\n')
         f = open('stock.txt','r')
         f.close()
         principale_stock()
