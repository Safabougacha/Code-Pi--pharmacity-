def fournisseur():
    print('Si vous voulez consultez les coordonnées du fournisseurs tapez 0')
    print('Si vous voulez modifier les coordonnées du fourisseurs tapez 1')
    choix_specifique=int(input('Votre choix est :'))
    while   (choix_specifique>1) and (choix_specifique<0):
        choix_specifique=int(input('Votre choix est :'))
    if  choix_specifique==0:
        consultez_coordonnées_du_fournisseurs(liste_fournisseurs)
    elif choix_specifique==1:
        modifier_coordonnées_du_fournisseurs(liste_fournisseurs)
    print('-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-')

def  ajouter_fournisseur(liste_fournisseurs):
    n=int(input('Combien de fournisseurs vous voulez ajouter: '))
    while n<=0:
        n=int(input('Combien de fournisseurs vous voulez ajouter: '))
    for k in range(0,n):
        for i in range(0,1) :
            L=[]
            for j in range (0,1) :
                Nom=input('Donner le nom à ajoutez :')
                Prenom=input('Donner le prénom à ajoutez :')
                Telephone=(input('Donner le télèphone à ajoutez :'))
                while len(Telephone)!=8:
                    Telephone=(input('Donner le télèphone à ajoutez :'))
                Email=input('Donner le email à ajoutez :')
               
                verif=Email.find('@')
                while verif==-1:
                    Email=input('Donner le email à ajoutez :')
                    verif=Email.find('@')
                Adresse=input("Donner l'adresse à ajoutez :")
                L.append(Nom)
                L.append(Prenom)
                L.append(Telephone)
                L.append(Email)
                L.append(Adresse)
                print(L)
        liste_fournisseurs.append(L)
        print('la liste fournisseurs aprés ajout est devenue:',liste_fournisseurs)  
    f=open('fournisseur.txt','a')
    f.write('la liste fournisseurs aprés ajout est devenue:')
    f.write(str(liste_fournisseurs))
    f.write('\n')
    f = open('fournisseur.txt','r')
    f.close()
def supprimer_fournisseur(liste_fournisseurs):
    import numpy as np
    print('donner le nom du fournisseur ')
    nom_du_fournisseur=input('donner le nom cherché :')
    for i in range(0,len(liste_fournisseurs)) :
         for j in range (0,5) :
             if liste_fournisseurs[i][j]==nom_du_fournisseur:
                   liste_fournisseurs_del = np.delete(liste_fournisseurs,i,0)
    if len(liste_fournisseurs)!=0:
         print(liste_fournisseurs_del)
    else:
        print('Nom introuvable')
    f=open('fournisseur.txt','a')
    f.write('liste fournisseurs avant suppresion:')
    f.write(str(liste_fournisseurs))
    f.write('\n')
    f.write('la liste fournisseur aprés suppresssion est devenu:')
    f.write(str(liste_fournisseurs_del))
    f.write('\n')
    f = open('fournisseur.txt','r')
    f.close()

def consultez_coordonnées_du_fournisseurs(liste_fournisseurs):
   nom_du_fournisseur=input('donner le nom du fournisseur que vous voulez consultez :')
   for i in range(0,len(liste_fournisseurs)) :
       for j in range (0,5) :
           if liste_fournisseurs[i][j]==nom_du_fournisseur:
               print(liste_fournisseurs[i])
   if len(liste_fournisseurs)!=0:
              print('la liste des fournisseurs aprés consulation: ',liste_fournisseurs)
   else:
        print('Nom inexixstant')
   f=open('fournisseur.txt','a')
   f.write('le fournisseur cherché est')
   f.write(str(liste_fournisseurs[i]))
   f.write('\n')
   f = open('fournisseur.txt','r')
   f.close()  
 
def modifier_coordonnées_du_fournisseurs(liste_fournisseurs):
   nom_du_fournisseur=input('donner le nom du fournisseur :')
   print('Si vous voulez modifier le nom tapez 0')
   print('Si vous voulez modifier le prénom tapez 1')
   print('Si vous voulez modifier le télèphone tapez 2')
   print('Si vous voulez modifier le Email tapez 3')
   print('Si vous voulez modifier adresse tapez 4')
   choix_de_modification=int(input('Votre choix est:'))
   while   choix_de_modification>=4:
       choix_de_modification=int(input('Votre choix est:'))
   for i in range(0,len(liste_fournisseurs)) :
        for j in range (0,5) :
            if liste_fournisseurs[i][j]==nom_du_fournisseur:
                if choix_de_modification==0:
                    Nom=input('donner le nom :')
                    liste_fournisseurs[i][0]=Nom
                    print('le fournisseur modifié est devenu:',liste_fournisseurs[i])
                elif choix_de_modification==1:
                    prenom=input('donner le prénom :')
                    liste_fournisseurs[i][1]=prenom
                    print('le fournisseur modifié est devenu:',liste_fournisseurs[i])
                elif choix_de_modification==2:
                    Telephone=(input('Donner le télèphone :'))
                    while len(Telephone)!=8:
                        Telephone=(input('Donner le télèphone  :'))
                    liste_fournisseurs[i][2]=Telephone
                    print('le fournisseur modifié est devenu:',liste_fournisseurs[i])
                elif choix_de_modification==3:
                   Email=input('Donner le email  :')
                   
                   verif=Email.find('@')
                   while verif==-1:
                       Email=input('Donner le email  :')
                   liste_fournisseurs[i][3]=Email
                   print('le fournisseur modifié est devenu:',liste_fournisseurs[i])
                elif choix_de_modification==4:
                    Adresse=input('adresse :')
                    liste_fournisseurs[i][4]=Adresse
                    print('le fournisseur modifié est devenu:',liste_fournisseurs[i])
   if len(liste_fournisseurs)!=0:
       print('la liste aprés modification est devenu :',liste_fournisseurs)
   else:
          print('Nom inexixstant')
   f=open('fournisseur.txt','w')
   f.write('le fournisseur modifié est devenu:')
   f.write(str(liste_fournisseurs[i]))
   f.write('\n')
   f = open('fournisseur.txt','r')
   f.close()
 
def fs_principale():  
    choix='a'
    while choix!='v' and choix!='f' and choix!='m' and choix!='s' and choix!='c':
          print('Si vous voulez continuez tapez v')
          print('Si vous voulez sortir tapez f')
          print('Si vous voulez choisir un fournisseur m')
          print("Si vous voulez consultez la commande d'un fournisseur tapez c")
          print('Si vous voulez supprimer un fournisseur s')
          choix=input('donner votre choix: ')
    if choix=='v':
        ajouter_fournisseur(liste_fournisseurs)
        fs_principale()    
    elif choix=='f':
        print('fin')
    elif choix=='c':
        Commande_fournisseur(fournisseurs,TVA,Articles,Referance,Quantite,Prix_unitaire,Mode_de_reglement)
        principale_c_f()
        fs_principale()
    elif choix=='m':
        fournisseur()
        fs_principale()
    elif choix=='s':
        supprimer_fournisseur(liste_fournisseurs)
        fs_principale()
# def rh maissa 
def ressource_humaine():
    print('Si vous voulez consultez les coordonnées du employé tapez 0')
    print('Si vous voulez modifier les coordonnées du employé tapez 1')
    choix_specifique=int(input('Votre choix est :'))
    while (choix_specifique>1) and (choix_specifique<0):
        choix_specifique=int(input('Votre choix est :'))
    if  choix_specifique==0:
        consultez_coordonnees_du_employe(liste_employes)
    elif choix_specifique==1:
        modifier_coordonnées_du_employe(liste_employes)

def consultez_coordonnees_du_employe(liste_employes):
    nom_du_employe=input('donner le nom du employé que vous voulez consultez :')
    for i in range(0,len(liste_employes)) :
        for j in range (0,5) :
            if liste_employes[i][j]==nom_du_employe:
                print(liste_employes[i])
    if len(liste_employes)!=0:
              print("la liste des employés aprés consultation",liste_employes)
    else:
        print('Nom inexixstant')
    f=open('RH.txt','a')
    f.write("l'employé cherché est")
    f.write(str(liste_employes[i]))
    f.write('\n')
    f = open('Rh.txt','r')
    f.close()
   
   

def modifier_coordonnées_du_employe(liste_employes):
    nom_du_employe=input('donner le nom du employé :')
    print('Si vous voulez modifier le nom tapez 0')
    print('Si vous voulez modifier le prénom tapez 1')
    print('Si vous voulez modifier le télèphone tapez 2')
    print('Si vous voulez modifier le Email tapez 3')
    print('Si vous voulez modifier adresse tapez 4')
    print('Si vous voulez modifier la commande en cours  tapez 5')
    choix_de_modification=int(input('Votre choix est:'))
    while (choix_de_modification>4) and (choix_de_modification<0):
        choix_de_modification=int(input('Votre choix est:'))
    for i in range(0,len(liste_employes)) :
         for j in range (0,5) :
             if liste_employes[i][j]==nom_du_employe:
                 if choix_de_modification==0:
                     Nom=input('donner le nom :')
                     liste_employes[i][0]=Nom
                     print('employé modifié est devenu:',liste_employes[i])
                 elif choix_de_modification==1:
                     prenom=input('donner le prénom :')
                     liste_employes[i][1]=prenom
                     print('employé modifié est devenu:',liste_employes[i])
                 elif choix_de_modification==2:
                     Telephone=(input('Donner le télèphone :'))
                     while len(Telephone)!=8:
                         Telephone=(input('Donner le télèphone  :'))
                     liste_employes[i][2]=Telephone
                     print('employé modifié est devenu:',liste_employes[i])
                 elif choix_de_modification==3:
                     Email=input('Donner le email  :')
                     
                     verif=Email.find('@')
                     while verif==-1:
                         Email=input('Donner le email  :')
                         verif=Email.find('@')
                     liste_employes[i][3]=Email
                     print('employé modifié est devenu:',liste_employes[i])
                 elif choix_de_modification==4:
                     Adresse=input('adresse :')
                     liste_employes[i][4]=Adresse
                     print('employé modifié est devenu:',liste_employes[i])
    if len(liste_employes)!=0:
        print('La liste des employés aprés modification:',liste_employes)
    else:
            print('Nom inexixstant')
    f=open('RH.txt','w')
    f.write("l'employé modifié est devenu:")
    f.write(str(liste_employes[i]))
    f.write('\n')
    f = open('RH.txt','r')
    f.close()
   
   
   
   
def ajouter_un_employe(liste_employes):
    n=int(input("Combien d'employés vous voulez ajoutez: "))
    while n<=0:
        n=int(input("Combien d'employés vous voulez ajoutez: "))
    for i in range(0,1) :
        Li=[]
        for j in range (0,1) :
            Nom=input('Donner le nom à ajoutez :')
            Prenom=input('Donner le prénom à ajoutez :')
            Telephone=(input('Donner le télèphone à ajouter :'))
            while len(Telephone)!=8:
                Telephone=(input('Donner le télèphone  à ajouter :'))
            Email=input('Donner le email à ajouter :')
           
            verif=Email.find('@')
            while verif==-1:
                Email=input('Donner le email à ajouter :')
                verif=Email.find('@')
            Adresse=input("Donner l'adresse à ajouter :")
            Li.append(Nom)
            Li.append(Prenom)
            Li.append(Telephone)
            Li.append(Email)
            Li.append(Adresse)
            print(Li)
        liste_employes.append(Li)
        print('la liste employés aprés ajout est devenu :',liste_employes)
    f=open('RH.txt','a')
    f.write('la liste employés aprés ajout est devenu:')
    f.write(str(liste_employes))
    f.write('\n')
    f = open('RH.txt','r')
    f.close()
   
   
def supprimer_un_employe(liste_employes):
    import numpy as np
    print('donner le nom du employé ')
    nom_du_employe=input('donner le nom cherché :')
    for i in range(0,len(liste_employes)) :
         for j in range (0,5) :
             if liste_employes[i][j]==nom_du_employe:
                   liste_employes_del = np.delete(liste_employes,i,0)
    if len(liste_employes)!=0:
         print('la liste aprés suppresssion est devenu:',liste_employes_del)
    else:
        print('Nom introuvable')
    f=open('RH.txt','a')
    f.write('liste employés avant suppresion:')
    f.write(str(liste_employes))
    f.write('\n')
    f.write('la liste employés aprés suppresssion est devenu:')
    f.write(str(liste_employes_del))
    f.write('\n')
    f = open('RH.txt','r')
    f.close()

def RH_principale():
    choix='a'
    while choix!='v' and choix!='f' and choix!='m' and choix!='s':
          print('Si vous voulez continuez tapez v')
          print('Si vous voulez sortir tapez f')
          print('Si vous voulez choisir un employé m')
          print('Si vous voulez supprimer un employé tapez s')
          choix=input('donner votre choix: ')
    if choix=='v':
        ajouter_un_employe(liste_employes)
        RH_principale()
    elif choix=='f':
        print('fin')
    elif choix=='m':
        ressource_humaine()
        RH_principale()
    elif choix=='s':
        supprimer_un_employe(liste_employes)
        RH_principale()


