def Commande_fournisseur(fournisseurs,TVA,Articles,Referance,Quantite,Prix_unitaire,Mode_de_reglement):  
    print('fournisseurs: ', fournisseurs)
    print('TVA: ',TVA)
    print('articles: ',Articles)
    print('Numéro de referance: ',Referance)
    print('quantité: ',Quantite)
    print('prix unitaire: ',Prix_unitaire)
    print('mode de réglement: ',Mode_de_reglement)
    print ("si vous voulez modifier ou ajouter un fournisseur tapez 1")
    print ("si vous voulez modifier ou ajouter le numéro de TVA tapez 2")
    print ("si vous voulez modifier ou ajouter un article tapez 3")
    print ("si vous voulez modifier ou ajouter le numéro de réfèrance tapez 4")
    print ("si vous voulez modifier ou ajouter la quantité tapez 5")
    print ("si vous voulez modifier ou ajouter le prix unitaire tapez 6")
    print ("si vous voulez modifier ou ajouter le mode de réglement tapez 7")
    choix_commande=(int(input("donner votre choix: ")))
    while (choix_commande>7)and (choix_commande<0):
          choix_commande=(int(input("donner votre choix: ")))
    if choix_commande==1:
         remplir_tableau_en_nom(fournisseurs)
         print('-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-')
    if choix_commande==2:
         remplir_tableau_en_chiffre(TVA)
         print('-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-')
    if choix_commande==3:
         remplir_tableau_en_nom(Articles)
         print('-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-')
    if choix_commande==4:
         remplir_tableau_en_chiffre(Referance)
         print('-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-')
    if choix_commande==5:
         remplir_tableau_en_chiffre(Quantite)
         print('-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-')
    if choix_commande==6:
         remplir_tableau_en_chiffre(Prix_unitaire)
         print('-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-')
    elif choix_commande==7:
         remplir_tableau_en_nom(Mode_de_reglement)
         print('-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-')

   
   
def consulter_commande_Par_fournisseur(choix_fournisseur):
    choix_fournisseur=(input(('donner fournisseur que vous cherchez: ')))
    position_fournisseur = fournisseurs.index(choix_fournisseur)
    print('ce que vous cherchez est à la position',position_fournisseur)
    print('Fournisseurs= ',fournisseurs[position_fournisseur])
    print('numéro de TVA= ',TVA[position_fournisseur])
    print('Articles= ',Articles[position_fournisseur])
    print('Numéro de réfèrance= ',Referance[position_fournisseur])
    print('Quantité= ',Quantite[position_fournisseur])
    print('Prix unitaire= ',Prix_unitaire[position_fournisseur])
    print('Mode de réglement= ',Mode_de_reglement[position_fournisseur])
    print('-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-')
    f=open('fournisseur.txt','a')
    f.write('la commande par fournisseur est:')
    f.write('\n')
    f.write('fournisseurs:')
    f.write(str(fournisseurs[position_fournisseur]))
    f.write('\n')
    f.write('TVA:')
    f.write(str(TVA[position_fournisseur]))
    f.write('\n')
    f.write('articles:')
    f.write(str(Articles[position_fournisseur]))
    f.write('\n')
    f.write('réfèrance:')
    f.write(str(Referance[position_fournisseur]))
    f.write('\n')
    f.write('quantité:')
    f.write(str(Quantite[position_fournisseur]))
    f.write('\n')
    f.write('Prix unitaire:')
    f.write(str(Prix_unitaire[position_fournisseur]))
    f.write('\n')
    f.write('mode de réglement:')
    f.write(str(Mode_de_reglement[position_fournisseur]))
    f.write('\n')
    f = open('fournisseur.txt','r')
    f.close()
 
 
def principale_c_f():
    choix='a'
    while choix!='v' and choix!='f' and choix!='m' and choix!='t' :
          print('Si vous voulez continuez tapez v')
          print('Si vous voulez sortir tapez f')
          print('Si vous voulez modifier quelque chose tapez m')
          print("Si vous voulez consultez la commande d'un fournisseur tapez t")
          choix=input('donner votre choix: ')
    if choix=='v':
        Commande_fournisseur(fournisseurs,TVA,Articles,Referance,Quantite,Prix_unitaire,Mode_de_reglement)  
        f=open('fournisseur.txt','a')
        f.write('la commande est:')
        f.write('\n')
        f.write('fournisseurs:')
        f.write(str(fournisseurs))
        f.write('\n')
        f.write('TVA:')
        f.write(str(TVA))
        f.write('\n')
        f.write('articles:')
        f.write(str(Articles))
        f.write('\n')
        f.write('réfèrance:')
        f.write(str(Referance))
        f.write('\n')
        f.write('quantité:')
        f.write(str(Quantite))
        f.write('\n')
        f.write('Prix unitaire:')
        f.write(str(Prix_unitaire))
        f.write('\n')
        f.write('mode de réglement:')
        f.write(str(Mode_de_reglement))
        f.write('\n')
        f = open('fournisseur.txt','r')
        f.close()
        print('-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-')
        principale_c_f()
   
    elif choix=='f':
        print('fin')
   
    elif choix=='t':
        consulter_commande_Par_fournisseur(choix_fournisseur)
        print('-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-')
        principale_c_f()
    elif choix=='m':
            print('si vous voulez modifiez fournisseur tapez 1 ')
            print('si vous voulez modifiez TVA tapez 2')
            print('si vous voulez modifiez article tapez 3 ')
            print('si vous voulez modifiez réfèrnce tapez 4')
            print('si vous voulez modifiez quantité tapez 5')
            print('si vous voulez modifiez prix unitaire tapez 6')
            print('si vous voulez modifiez mode de réglement tapez 7')
            choix_modification=int(input('donner votre choix: '))
            if choix_modification==1:
                modifier_tableau_nom(fournisseurs)
            if choix_modification==2:
                modifier_tableau_nom(TVA)
            if choix_modification==3:
                modifier_tableau_nom(Articles)
            if choix_modification==4:
                modifier_tableau_en_chiffre(Referance)  
            if choix_modification==5:
                modifier_tableau_nom(Quantite)
            if choix_modification==6:
                modifier_tableau_en_chiffre(Prix_unitaire)  
            if choix_modification==7:
                  modifier_tableau_nom(Mode_de_reglement)
            print('-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-')
            f=open('fournisseur.txt','w')
            f.write('la commande modifiée est:')
            f.write('\n')
            f.write('fournisseurs:')
            f.write(str(fournisseurs))
            f.write('\n')
            f.write('TVA:')
            f.write(str(TVA))
            f.write('\n')
            f.write('articles:')
            f.write(str(Articles))
            f.write('\n')
            f.write('réfèrance:')
            f.write(str(Referance))
            f.write('\n')
            f.write('quantité:')
            f.write(str(Quantite))
            f.write('\n')
            f.write('Prix unitaire:')
            f.write(str(Prix_unitaire))
            f.write('\n')
            f.write('mode de réglement:')
            f.write(str(Mode_de_reglement))
            f.write('\n')
            f = open('fournisseur.txt','r')
