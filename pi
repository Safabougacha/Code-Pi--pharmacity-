# farah
def Commande_client(Clients,TVA,Articles,Referance,Quantite,Prix_unitaire,Mode_de_reglement):
    print('clients: ', Clients)
    print('TVA: ',TVA)
    print('articles: ',Articles)
    print('Numéro de referance: ',Referance)
    print('quantité: ',Quantite)
    print('prix unitaire: ',Prix_unitaire)
    print('mode de réglement: ',Mode_de_reglement)
    print ("si vous voulez modifier ou ajouter un client tapez 1 ")
    print ("si vous voulez modifier ou ajouter le numéro de TVA tapez 2 ")
    print ("si vous voulez modifier ou ajouter un article tapez 3 ")
    print ("si vous voulez modifier ou ajouter le numéro de réfèrence tapez 4 ")
    print ("si vous voulez modifier ou ajouter la quantité tapez 5 ")
    print ("si vous voulez modifier ou ajouter le prix unitaire tapez 6 ")
    print ("si vous voulez modifier ou ajouter le mode de réglement tapez 7 ")    
    choix_commande=(int(input("donner votre choix: ")))
    
    while (choix_commande>7)and (choix_commande<1):
          choix_commande=(int(input("donner votre choix: ")))
    if choix_commande==1:
         remplir_tableau_en_nom(Clients)  
    if choix_commande==2:
         remplir_tableau_en_chiffre(TVA)
    if choix_commande==3:
         remplir_tableau_en_nom(Articles)
    if choix_commande==4:
         remplir_tableau_en_chiffre(Referance)
    if choix_commande==5:
         remplir_tableau_en_chiffre(Quantite)
    if choix_commande==6:
         remplir_tableau_en_chiffre(Prix_unitaire)
    elif choix_commande==7:
         remplir_tableau_en_nom(Mode_de_reglement)

def remplir_tableau_en_chiffre(Tableau):
    remplir=float(input('donner le chiffre: '))
    Tableau.append(remplir)

def remplir_tableau_en_nom(Tableau):
    remplir=(input('donner le nom: '))
    Tableau.append(remplir)
   
   
def consulter_commande_Par_client(choix_client):
    choix_client=(input(('donner client que vous cherchez: ')))  
    position_client = Clients.index(choix_client)
    print('ce que vous cherchez est à la position= ',position_client)
    print('Clients= ',Clients[position_client])
    print('numéro de TVA= ',TVA[position_client])
    print('Articles= ',Articles[position_client])
    print('Numéro de réfèrance= ',Referance[position_client])
    print('Quantité= ',Quantite[position_client])
    print('Prix unitaire= ',Prix_unitaire[position_client])
    print('Mode de réglement= ',Mode_de_reglement[position_client])
    print('-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-')
    f=open('client.txt','a')
    f.write('la commande par client est:')
    f.write('\n')
    f.write('clients:')
    f.write(str(Clients[position_client]))
    f.write('\n')
    f.write('TVA:')
    f.write(str(TVA[position_client]))
    f.write('\n')
    f.write('articles:')
    f.write(str(Articles[position_client]))
    f.write('\n')
    f.write('réfèrance:')
    f.write(str(Referance[position_client]))
    f.write('\n')
    f.write('quantité:')
    f.write(str(Quantite[position_client]))
    f.write('\n')
    f.write('Prix unitaire:')
    f.write(str(Prix_unitaire[position_client]))
    f.write('\n')
    f.write('mode de réglement:')
    f.write(str(Mode_de_reglement[position_client]))
    f.write('\n')
    f = open('client.txt','r')
    f.close()

def modifier_tableau_en_chiffre(tableau):
    valeur_a_modifier=int(input('donner le numero de la ligne à modifier: '))
    nouvelle_valeur=float(input('donner la nouvelle valeur: '))
    tableau[valeur_a_modifier]=nouvelle_valeur
    print('-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-')
   
def modifier_tableau_nom(tableau):
    valeur_a_modifier=int(input('donner le numero de la ligne à modifier: '))
    nouvelle_valeur=(input('donner le nouveau nom: '))
    tableau[valeur_a_modifier]=nouvelle_valeur
    print('-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-')
   
 
def principale_c_c():  
    choix='a'  
    while choix!='v' and choix!='f' and choix!='m' and choix!='t' :
          print('Si vous voulez continuez tapez v')
          print('Si vous voulez sortir tapez f')
          print('Si vous voulez modifier quelque chose tapez m')
          print("Si vous voulez consultez la commande d'un client tapez t")
          print('-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-')
          choix=input('donner votre choix: ')
    if choix=='v':
        Commande_client(Clients,TVA,Articles,Referance,Quantite,Prix_unitaire,Mode_de_reglement)
        print('-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-')
        f=open('client.txt','a')
        f.write('la commande est:')
        f.write('\n')
        f.write('clients:')
        f.write(str(Clients))
        f.write('\n')
        f.write('TVA:')
        f.write(str(TVA))
        f.write('\n')
        f.write('articles:')
        f.write(str(Articles))
        f.write('\n')
        f.write('réfèrance:')
        f.write(str(Referance))
        f.write('\n')
        f.write('quantité:')
        f.write(str(Quantite))
        f.write('\n')
        f.write('Prix unitaire:')
        f.write(str(Prix_unitaire))
        f.write('\n')
        f.write('mode de réglement:')
        f.write(str(Mode_de_reglement))
        f.write('\n')
        f = open('client.txt','r')
        f.close()
        principale_c_c()
   
    elif choix=='f':
        print('_-_-_-_-_-_-_ fin _-_-_-_-_-_-_-')
   
    elif choix=='t':
        consulter_commande_Par_client(choix_client)
        principale_c_c()
    elif choix=='m':
            print('si vous voulez modifiez client tapez 1 ')
            print('si vous voulez modifiez TVA tapez 2')
            print('si vous voulez modifiez article tapez 3 ')
            print('si vous voulez modifiez réfèrance tapez 4')
            print('si vous voulez modifiez quantité tapez 5')
            print('si vous voulez modifiez prix unitaire tapez 6')
            print('si vous voulez modifiez mode de réglement tapez 7')
            print('-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-')
            choix_modification=int(input('donner votre choix: '))
            if choix_modification==1:
                modifier_tableau_nom(Clients)
                print(Clients)
                print('-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-')
               
            if choix_modification==2:
                modifier_tableau_nom(TVA)
                print(TVA)
                print('-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-')
               
            if choix_modification==3:
                modifier_tableau_nom(Articles)
                print('-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-')
            if choix_modification==4:
                modifier_tableau_en_chiffre(Referance)  
                print('-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-')
            if choix_modification==5:
                modifier_tableau_nom(Quantite)
                print('-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-')
            if choix_modification==6:
                modifier_tableau_en_chiffre(Prix_unitaire)
                print('-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-')
            if choix_modification==7:
                  modifier_tableau_nom(Mode_de_reglement)  
                  print('-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-')
            f=open('client.txt','w')
            f.write('la commande modifiée est:')
            f.write('\n')
            f.write('clients:')
            f.write(str(Clients))
            f.write('\n')
            f.write('TVA:')
            f.write(str(TVA))
            f.write('\n')
            f.write('articles:')
            f.write(str(Articles))
            f.write('\n')
            f.write('réfèrance:')
            f.write(str(Referance))
            f.write('\n')
            f.write('quantité:')
            f.write(str(Quantite))
            f.write('\n')
            f.write('Prix unitaire:')
            f.write(str(Prix_unitaire))
            f.write('\n')
            f.write('mode de réglement:')
            f.write(str(Mode_de_reglement))
            f.write('\n')
            f = open('client.txt','r')
            f.close()
            principale_c_c()
            print('-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-')
def client():
    print('Si vous voulez consultez les coordonnées du client tapez 0')
    print('Si vous voulez modifier les coordonnées du client tapez 1')
    choix_specifique=int(input('Votre choix est :'))
    while   (choix_specifique>1) and (choix_specifique<0):
        choix_specifique=int(input('Votre choix est :'))
    if  choix_specifique==0:
        consultez_coordonnées_du_client(liste_client)
    elif choix_specifique==1:
        modifier_coordonnées_du_client(liste_client)
    print('-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-')
   
def  consultez_coordonnées_du_client(liste_client):              
    nom_du_client=input('donner le nom du client que vous voulez consultez :')
    for i in range(0,len(liste_client)) :
        for j in range (0,5) :
            if liste_client[i][j]==nom_du_client:
                print(liste_client[i])
               
    if len(liste_client)!=0:
              print('la liste aprés consultation est devenu: ',liste_client)
    else:
        print('Nom inexixstant')
    print('-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-')
    f=open('client.txt','a')
    f.write('le client cherché est')
    f.write(str(liste_client[i]))
    f.write('\n')
    f = open('client.txt','r')
    f.close()
   

def modifier_coordonnées_du_client(liste_client):
    nom_du_client=input('donner le nom du client que vous voulez modifiez :')
    print('Si vous voulez modifier le nom tapez 0')
    print('Si vous voulez modifier le prénom tapez 1')
    print('Si vous voulez modifier le télèphone tapez 2')
    print('Si vous voulez modifier le Email tapez 3')
    print('Si vous voulez modifier adresse tapez 4')
    print('-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-')
    choix_de_modification=int(input('Votre choix est: '))
    while   (choix_de_modification>4) and (choix_de_modification<0):
        choix_de_modification=int(input('Votre choix est: '))
    for i in range(0,len(liste_client)) :
          for j in range (0,5) :
              if liste_client[i][j]==nom_du_client:
                  if choix_de_modification==0:
                      Nom=input('donner le nom :')
                      liste_client[i][0]=Nom
                      print('le client modifié est devenu:',liste_client[i])
                  elif choix_de_modification==1:
                      prenom=input('donner le prénom :')
                      liste_client[i][1]=prenom
                      print('le client modifié est devenu:',liste_client[i])
                  elif choix_de_modification==2:
                      Telephone=(input('Donner le télèphone :'))
                      while len(Telephone)!=8:
                          Telephone=(input('Donner le télèphone  :'))
                      liste_client[i][2]=Telephone
                      print('le client modifié est devenu:',liste_client[i])
                  elif choix_de_modification==3:
                      Email=input('Donner le email  :')
                     
                      verif=Email.find('@')
                      while verif==-1:
                          Email=input('Donner le email  :')
                          verif=Email.find('@')
                      liste_client[i][3]=Email
                      print('le client modifié est devenu:',liste_client[i])
                  elif choix_de_modification==4:
                      Adresse=input('adresse :')
                      liste_client[i][4]=Adresse
                      print('le client modifié est devenu:',liste_client[i])
    if len(liste_client)!=0:
        print('la liste aprés modification est devenu: ',liste_client)
    else:
            print('Nom inexixstant')
    print('-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-')
    f=open('client.txt','w')
    f.write('le client modifié est devenu:')
    f.write(str(liste_client[i]))
    f.write('\n')
    f = open('client.txt','r')
    f.close()
 
   

def ajoutez_un_client(liste_client):  
    n=int(input('Combien de clients vous voulez ajoutez: '))
    while n<=0:
        n=int(input('Combien de clients vous voulez ajoutez: '))
    for k in range(0,n):
        for i in range(0,1) :
            Ligne=[]
            for j in range (0,1) :
                Nom=input('Donner le nom à ajoutez :')
                Prenom=input('Donner le prénom à ajoutez :')
                Telephone=(input('Donner le télèphone à ajoutez :'))
                while len(Telephone)!=8:
                    Telephone=(input('Donner le télèphone à ajoutez :'))
                Email=input('Donner le email à ajoutez :')
               
                verif=Email.find('@')
                while verif==-1:
                    Email=input('Donner le email à ajoutez :')
                    verif=Email.find('@')
                Adresse=input("Donner l'adresse à ajoutez :")
                Ligne.append(Nom)
                Ligne.append(Prenom)
                Ligne.append(Telephone)
                Ligne.append(Email)
                Ligne.append(Adresse)
                print(Ligne)
        liste_client.append(Ligne)
        print('la liste clients aprés ajout est devenue :',liste_client)
        print('-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-')
    f=open('client.txt','a')
    f.write('la liste clients aprés ajout est devenue :')
    f.write(str(liste_client))
    f.write('\n')
    f = open('client.txt','r')
    f.close()
   
       
def supprimer_un_client(liste_client):
    import numpy as np
    nom_du_client=input('donner le nom du client que vous voulez supprimé : ')
    for i in range(0,len(liste_client)) :
          for j in range (0,5) :
              if liste_client[i][j]==nom_du_client:
                    liste_client_del = np.delete(liste_client,i,0)                            
    if len(liste_client)!=0:
          print('la liste aprés suppresssion est devenu: ',liste_client_del)
    else:
        print('introuvable')
    print('-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-')
    f=open('client.txt','a')
    f.write('liste clients avant suppresion:')
    f.write(str(liste_client))
    f.write('\n')
    f.write('la liste clients suppresssion est devenu:')
    f.write(str(liste_client_del))
    f.write('\n')
    f = open('client.txt','r')
    f.close()

def client_principale():
    choix='a'
    while choix!='v' and choix!='f' and choix!='m' and choix!='s' and choix!='c':
          print('Si vous voulez continuez tapez v')
          print('Si vous voulez sortir tapez f')
          print('Si vous voulez choisir un client m')
          print("Si vous voulez consultez la commande d'un client tapez c")
          print('Si vous voulez supprimer un client tapez s')
          print('-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-')
          choix=input('donner votre choix: ')
    if choix=='v':
        ajoutez_un_client(liste_client)
        print('-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-')
        client_principale()
        print('-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-')
    elif choix=='f':
        print('_-_-_-_-_-_-_ fin _-_-_-_-_-_-_-')
    elif choix=='c':
        Commande_client(Clients,TVA,Articles,Referance,Quantite,Prix_unitaire,Mode_de_reglement)
        print('-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-')
        principale_c_c()
        print('-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-')
        client_principale()
        print('-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-')
    elif choix=='m':
        client()
        print('-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-')
        client_principale()
        print('-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-')
    elif choix=='s':
        supprimer_un_client(liste_client)
        print('-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-')
        client_principale()
        print('-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-')
